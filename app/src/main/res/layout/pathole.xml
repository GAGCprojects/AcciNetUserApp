<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ganesh.abiaccinet.AccidentComplain">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:id="@+id/scrollView2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="14dp"
                android:text="Pothole Complaint"
                android:textColor="#000000"
                android:id="@+id/txt"
                android:textSize="25dp" />

            <View
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:background="#50000000"
                android:layout_below="@+id/txt"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:layout_height="1dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:text="Landmark"
                android:id="@+id/ld"
                android:textSize="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/landmark"
                android:layout_below="@+id/ld"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="20dp"
                android:layout_below="@+id/landmark"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/ds"
                />

            <EditText
                android:id="@+id/desciption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ds"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send"
                android:id="@+id/regcom"
                android:layout_below="@+id/img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                />
           <TextView
               android:id="@+id/condi"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Condition"
               android:textSize="20dp"
               android:layout_below="@id/desciption"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="10dp"
               />
            <RadioGroup
                android:gravity="center"
                android:id="@+id/condition1"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/condi"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="small"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="medium"/>


                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="large"/>

            </RadioGroup>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/img"
                android:padding="30dp"
                android:src="@drawable/ic_menu_camera"
                android:background="#2342"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/condition1"
                android:layout_marginTop="10dp"
                />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
