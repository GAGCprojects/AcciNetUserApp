<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/profilr_bg"
    tools:context="com.ganesh.abiaccinet.ProfileActivity">


    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:padding="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <ImageView
                android:id="@+id/accidentcomplaint"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/accident" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toEndOf="@+id/card1"
        android:layout_marginLeft="10dp"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <ImageView
                android:id="@+id/pathholecomplaint"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/road_damage" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/card1"
        android:layout_below="@+id/card1"
        android:layout_marginTop="10dp"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <ImageView
                android:id="@+id/unauthorizedmediancut"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/no_turn" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/card2"
        android:layout_alignTop="@+id/card3"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/card2"
            android:layout_alignTop="@+id/card3"
            android:padding="20dp">

            <ImageView
                android:id="@+id/others"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:src="@drawable/others" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>

