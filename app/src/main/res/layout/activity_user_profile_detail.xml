<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ganesh.abiaccinet.user_profile_detail">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/user_det"
        android:id="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginTop="16dp"
        android:textSize="20dp"
        android:padding="10dp"
        android:id="@+id/pfname"
        android:layout_toEndOf="@+id/imageView2"
        android:text="Username" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:background="#60000000"
        android:id="@+id/view" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView2"

        android:layout_below="@+id/view"
        android:layout_marginTop="15dp"
        android:text="Aadhar Number"
        android:id="@+id/textView2" />

    <TextView
        android:id="@+id/aadharnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="13dp"
        android:text="1234567891011" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/aadharnum"
        android:layout_marginTop="10dp"
        android:background="#60000000"
        android:id="@+id/view2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/aadharnum"
        android:layout_below="@+id/view2"
        android:layout_marginTop="15dp"
        android:text="Email id"
        android:id="@+id/textView5" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="13dp"
        android:text="abcdeffghjh@gmail.com" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/email"
        android:layout_marginTop="10dp"
        android:background="#60000000"
        android:id="@+id/view3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/view3"
        android:layout_marginTop="15dp"
        android:text="Phone number"
        android:id="@+id/textView7" />

    <TextView
        android:id="@+id/phnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="13dp"
        android:text="12345678910" />
</RelativeLayout>
